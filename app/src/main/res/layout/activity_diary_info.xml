<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.DiaryInfo">

    <TextView
        android:id="@+id/date_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:letterSpacing="0.05"
        android:lineSpacingExtra="5.5sp"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardview_info" />


    <TextView
        android:id="@+id/content_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="내용"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="5.5sp"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/title_info" />

    <TextView
        android:id="@+id/title_info"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:text="제목"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="5.5sp"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_info" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_info"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="5dp"
            android:elevation="10dp"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>


